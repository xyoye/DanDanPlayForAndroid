<!-- 标签的背景 label_bg -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/block_label_stoke_checked_color" />
            <corners android:radius="8dp" />
            <solid android:color="@color/block_label_bg_color" />
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/block_label_stoke_uncheck_color" />
            <corners android:radius="8dp" />
            <solid android:color="@color/block_label_bg_color" />
        </shape>
    </item>
</selector>