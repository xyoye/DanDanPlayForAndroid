<?xml version="1.0" encoding="utf-8"?>
<com.xyoye.dandanplay.ui.weight.swipe_menu.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:contentView="@+id/item_layout"
    app:leftMenuView="@+id/left"
    app:rightMenuView="@+id/right">

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remove_danmu_tv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/immutable_text_theme"
            android:gravity="center"
            android:text="移除\n弹幕"
            android:textColor="@color/immutable_text_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/remove_zimu_tv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/immutable_text_orange"
            android:gravity="center"
            android:text="移除\n字幕"
            android:textColor="@color/immutable_text_white"
            android:textSize="12sp" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/item_bg_color">

        <ImageView
            android:id="@+id/cover_iv"
            android:layout_width="84dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:background="@color/layout_bg_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/danmu_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/background_text_circle_theme"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp"
            android:text="弹"
            android:textColor="@color/immutable_text_theme"
            android:textSize="8sp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/zimu_tips_tv"
            app:layout_constraintTop_toTopOf="@+id/cover_iv" />

        <TextView
            android:id="@+id/zimu_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:background="@drawable/background_text_circle_orange"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp"
            android:text="字"
            android:textColor="@color/immutable_text_orange"
            android:textSize="8sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/cover_iv"
            app:layout_constraintTop_toTopOf="@+id/cover_iv" />

        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_duration"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="00:00"
            android:textColor="@color/immutable_text_white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/cover_iv"
            app:layout_constraintEnd_toEndOf="@+id/cover_iv" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cover_iv"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bind_danmu_tv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/immutable_text_theme"
            android:gravity="center"
            android:text="绑定\n弹幕"
            android:textColor="@color/immutable_text_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bind_zimu_tv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/immutable_text_orange"
            android:gravity="center"
            android:text="绑定\n字幕"
            android:textColor="@color/immutable_text_white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/delete_video_tv"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@color/immutable_text_red"
            android:gravity="center"
            android:text="删除\n视频"
            android:textColor="@color/immutable_text_white"
            android:textSize="12sp" />
    </LinearLayout>
</com.xyoye.dandanplay.ui.weight.swipe_menu.EasySwipeMenuLayout>